! Use a nice truetype font and size by default... 
xterm*faceName: FiraCore\ Nerd\ Font
xterm*faceSize: 12
xterm*dynamiccolors: true
xterm*utf8: 2

!-- Xft settings -- !
Xft.dpi:       92
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

!-- Font settings --!
#define font1 xft:FiraCode Nerd Font Mono:pixelsize=13
#define font2 xft:DejaVuSansMono Nerd Font Mono:pixelsize=13
URxvt*font: font1,font2
URxvt*boldFont: font1:style=Bold,font2:style=bold
URxvt*italicFont: font1:style=Italic,font2:style=Italic
URxvt*boldItalicFont: font1:style=Bold Italic,font2:style=Bold Italic
URxvt.letterSpace: -1

URxvt*termName: rxvt-unicode-256color
URxvt.scrollBar: false
URxvt.scrollstyle: plain
URxvt.perl-ext-common: default,matcher,font-size,url-select
URxvt.matcher.button: 1
URxvt*saveLines : 8000
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt.keysym.C-Up: perl:font-size:increase
URxvt.keysym.C-Down: perl:font-size:decrease
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
!Xterm escape codes, word by word movement
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Shift-Control-Left: \033[1;6D
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Shift-Control-Up: \033[1;6A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Shift-Control-Down: \033[1;6B

URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

